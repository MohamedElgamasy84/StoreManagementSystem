@model IEnumerable<SalesOrderViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>فواتير البيع</h1>
<a asp-action="Create" class="btn btn-success">إضافة فاتورة</a>
@if (Model != null && Model.Any())
{

    <table class="table table-striped table-hover mt-3" >
        <thead>
            <tr>
                <td>رقم الفاتورة</td>
                <td>العميل</td>
                <td>تاريخ الفاتورة</td>
                <td>الاجمالي الكلي</td>
                <td>التفاصيل</td>
                
            </tr>
        </thead>
        <tbody>

            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.CustomerFullName</td>
                    <td>@order.OrderDate.ToString("yyyy/MM/dd")</td>
                    <td>@order.TotalAmount</td>
                    <td><a asp-action="Details" asp-route-id="@order.Id"><i class="fas fa-eye"></i></a></td>

                </tr>

            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert alert-warning">
        <h3>لا يوجد فواتير</h3>
    </div>
}
