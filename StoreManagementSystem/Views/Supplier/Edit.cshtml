@model SupplierViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>تعديل</h1>

<div asp-validation-summary="All"></div>
<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label class="col-form-label" asp-for="FullName"></label>
        <input class="form-control" asp-for="FullName" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="PhoneNumber"></label>
        <input class="form-control" asp-for="PhoneNumber" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Email"></label>
        <input class="form-control" asp-for="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <br />
    <input type="submit" value="حفظ" class="btn btn-warning" /> |
    <a class="btn btn-light" asp-action="Index">العودة الي القائمة</a>
</form>
@section ValidationScriptSection {
    <partial name="_ValidationScriptsPartial" />
}

