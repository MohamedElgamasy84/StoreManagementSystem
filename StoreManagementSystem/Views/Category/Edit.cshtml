@model CategoryUpdateViewModel
@{
    ViewData["Title"] = "Edit";
}
@if (Model.ImageName is not null)
{

    <div>
        <img src="~/Files/Images/@Model.ImageName" class="rounded" height="100" width="100" />
        <input asp-for="ImageName" hidden />
    </div>
}

<h1>تعديل تصنيف ال @Model.Name</h1>

<div asp-validation-summary="All"></div>
<form asp-action="Edit" enctype="multipart/form-data">
    <input asp-for="ImageName" hidden />
    <div class="form-group">
        <label class="col-from-label" asp-for="Id"></label>
        <input class="form-control" asp-for="Id" />
    </div>
    <div class="form-group">
        <label class="col-from-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-from-label" asp-for="Image"></label>
        <input class="form-control" asp-for="Image" />
    </div>
    <br />
    <input type="submit" value="حفظ" class="btn btn-warning" /> |
    <a class="btn btn-light" asp-action="Index">العودة الي القائمة </a>
</form>
@section ValidationScriptSection {
    <partial name="_ValidationScriptsPartial" />
}
