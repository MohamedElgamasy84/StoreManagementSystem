@model IEnumerable<CategoryViewModel>
@{
    ViewData["Title"] = "Index";
}

<a asp-action="Create" class="btn btn-success">اضافة تصنيف</a>

@if (Model.Count() > 0)
{
    <h2>التصنيفات</h2>
    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(c=>c.Image)</td>
                <td>@Html.DisplayNameFor(c=>c.Id)</td>
                <td>@Html.DisplayNameFor(c=>c.Name)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach(var category in Model)
            {
                <tr>
                    <td><img src="~/Files/Images/@category.ImageName" class="rounded" height="40" width="40" alt="Product Image" /> </td>
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                    <partial name="_ButtonsPartialView" model="@category.Id" />

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert alert-warning">
        <h3>لايوجد تصنيف</h3>
    </div>
}
