@model IEnumerable<ProductViewModel>
@{
    ViewData["Title"] = "Products";
}


<a asp-action="Create" class="btn btn-success">اضافة منتج</a>

@if (Model.Count() > 0)
{
    <h1>المنتجات</h1>
    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>
                <td>الصورة</td>
                <td>رقم المنتج</td>
                <td>المنتج</td>
                <td>الكمية</td>
                 <td>سعر البيع</td>
                <td>التصنيف</td>
                <td>التفاصيل</td>
                <td>تعديل</td>
                <td>حذف</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td><img src="~/Files/Images/@product.ImageName" class="rounded" height="40" width="40" alt="Product Image" /> </td>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Quantity</td>
                    <td>@product.CostPrice</td>
                    <td>@product.CategoryName</td>
                    <partial name="_ButtonsPartialView" model="@product.Id" />

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert alert-warning">
        <h3>لا يوجد منتجات</h3>
    </div>
}

