@model ProductUpdateViewModel
@{
    ViewData["Title"] = "Edit";
}

@if (Model.ImageName is not null)
{

    <div>
        <img src="~/Files/Images/@Model.ImageName" class="rounded" height="100" width="100" />
        <input asp-for="ImageName" hidden />
    </div>
}

<h1>تعديل منتج ال @Model.Name</h1>
<div asp-validation-summary="All"></div>

<form asp-action="Edit" enctype="multipart/form-data">
    <input asp-for="ImageName" hidden />
    <div class="form-group">
        <label class="col-from-label" asp-for="Id"></label>
        <input class="form-control" asp-for="Id" />
    </div>
    <div class="form-group">
        <label class="col-from-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
    </div>
    
   @*  <div class="form-group">
        <label class="col-from-label" asp-for="Units"></label>
        <input class="form-control" asp-for="Units" />
    </div> *@
   
    <div class="form-group">
        <label class="col-from-label" asp-for="CostPrice"></label>
        <input class="form-control" asp-for="CostPrice" />
    </div>

    <<div class="form-group">
        <label class="col-form-label" asp-for="CategoryId">التصنيف</label>
        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
            <option value="">-- اختر التصنيف --</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <br />
    <input type="submit" value="حفظ" class="btn btn-warning" /> |
    <a class="btn btn-light" asp-action="Index">العودة الي القائمة </a>
</form>
@section ValidationScriptSection {
    <partial name="_ValidationScriptsPartial" />
}

