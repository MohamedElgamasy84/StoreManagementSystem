@model IEnumerable<CustomerViewModel>
@{
    ViewData["Title"] = "Index";
}

<a asp-action="Create" class="btn btn-success">عميل جديد</a>
<br />
@if (Model.Count() > 0)
{
    <h2>العملاء</h2>
    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(c=>c.Id)</td>
                <td>@Html.DisplayNameFor(c=>c.FullName)</td>
                <td>@Html.DisplayNameFor(c=>c.PhoneNumber)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach(var customer in Model)
            {
                <tr>
                    <td>@customer.Id </td>
                    <td>@customer.FullName </td>
                    <td>@customer.PhoneNumber</td>
                    <partial name="_ButtonsPartialView" model="@customer.Id" />
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div class="mt-5 alert alert alert-warning">
        <h3>لا يوجد عملاء</h3>
    </div>
}
