@model CustomerCreateViewModel
@{
    ViewData["Title"] = "Create";
}

<h1>عميل جديد</h1>
<div class="container">
<form asp-action="Create" method="post" class="mt-3">
    <div class="form-group">
        <label class="col-form-label" asp-for="FullName"></label>
        <input class="form-control" asp-for="FullName"/>
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="PhoneNumber"></label>
            <input class="form-control" asp-for="PhoneNumber" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <br />
    <a asp-action="Index" class="btn btn-light">العودة</a>
    <input type="submit" value="اضافة" class="btn btn-primary"/>
</form>
    @section ValidationScriptSection {
        <partial name="_ValidationScriptsPartial" />
    }
</div>