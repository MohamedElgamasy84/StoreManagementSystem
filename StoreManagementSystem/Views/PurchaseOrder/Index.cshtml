@model IEnumerable<PurchaseOrderViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>فواتير الشراء</h1>
<a asp-action="Create" class="btn btn-success">إضافة فاتورة</a>
@if (Model != null && Model.Any())
{

    <table class="table table-striped table-hover mt-3">
    <thead>
        <tr>
            <td>رقم الفاتورة</td>
            <td>المورد</td>
            <td>تاريخ الفاتورة</td>
            <td>الاجمالي الكلي</td>
            <td>التفاصيل</td>
           
        </tr>
    </thead>
    <tbody>
        
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.SupplierFullName</td>
                    <td>@order.PurchaseOrderDate.ToString("yyyy/MM/dd")</td>
                    <td>@order.TotalAmount</td>
                    <td><a asp-action="Details" asp-route-id="@order.Id"><i class="fas fa-eye"></i></a></td>

                </tr>

            }
    </tbody>
</table>
}
else
{
    <div class="mt-5 alert alert alert-warning">
        <h3>لا يوجد فواتير</h3>
    </div>
}

